<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.app.geokaab.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.app.geokaab.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.app.geokaab.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/experiencesFragment"
        android:name="com.app.geokaab.ui.type_experiences.ExperiencesFragment"
        android:label="fragment_experiences"
        tools:layout="@layout/fragment_experiences" >
        <action
            android:id="@+id/action_experiencesFragment_to_experienceDetailActivity"
            app:destination="@id/experienceDetailActivity" />
    </fragment>
    <activity
        android:id="@+id/experienceDetailActivity"
        android:name="com.app.geokaab.ui.type_experiences.ExperienceDetailActivity"
        android:label="activity_experience_detail"
        tools:layout="@layout/activity_experience_detail" />
</navigation>