<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoKaab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--colors-->
    <style name="screen_bg">
        <item name="android:background">@color/white</item>
    </style>
    <style name="screen_bg_card_3">
        <item name="cardBackgroundColor">@color/gray40</item>
    </style>
    <color name="bg_sheet">@color/white</color>
    <style name="icons_bg">
        <item name="android:tint">@color/black70</item>
        <item name="android:backgroundTint">@color/black70</item>
    </style>
    <style name="listDivider_bg">
        <item name="android:background">@color/black10</item>
    </style>
    <style name="screen_bg_card_1">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="screen_bg_card_2">
        <item name="cardBackgroundColor">@color/black50</item>
    </style>
    <!--Text-->
    <style name="TitilliumWebLight">
        <item name="android:fontFamily">@font/titillium_web_light</item>
    </style>
    <style name="TitilliumWebRegular">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
    </style>
    <style name="TitilliumWebBold">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
    </style>
    <style name="TitilliumWebBlack">
        <item name="android:fontFamily">@font/titillium_web_black</item>
    </style>

    <style name="TitleStyle_2">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/titillium_web_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="DescStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:fontFamily">@font/titillium_web_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black70</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">4%</item>
    </style>


</resources>